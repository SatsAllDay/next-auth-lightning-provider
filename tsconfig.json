{
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "target": "ES2020",
    "module": "ESNext",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "declarationMap": true,
    "declaration": true,
    "outDir": "./",
    "rootDir": "./src",
    "baseUrl": "./",
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/*.jsx",
    "**/*.js",
    "**/*.d.ts",
    "**/*.test.ts",
    "main",
    "generators",
    "hooks",
    "server",
    "utils",
    "examples",
    "node_modules"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false,
  }
}