{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "isolatedModules": false,
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "stripInternal": true,
    "declarationMap": true,
    "declaration": true
  },
  "exclude": ["*.js", "*.d.ts", "dist", "examples"]
}
